<div class="greeting text-white text-center mario">Welcome, {{username}}!</div>
<div class="container-fluid animate__animated animate__fadeInUp">
  <div id="games-card" class="row row-cols-2 d-flex justify-content-evenly">
    {{#each games as |game|}}
    <div class="card text-black col m-2" style="width: 18rem;">
      <img src={{game.thumbnail}} class="card-img-top mt-2" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{game.title}}</h5>
        <p class="card-text">{{game.short_description}}</p>
        <p>{{game.genre}} | {{game.platform}} | {{game.developer}}</p>
        <div class="d-grid">
          <a href={{game_url}} class="btn btn-primary m-1">Play {{title}}!</a>
          <button onclick="getReviewForm(event)" id="addReviewBtn" class="btn btn-primary review-btn m-1" value={{id}}>Add a review</button>

          <a class="btn btn-primary del-game m-1" data-savedid="{{game.saved.id}}">Remove</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="/js/deleteGame.js"></script>
<script src="/js/getReviewForm.js"></script>

