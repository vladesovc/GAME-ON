<!-- Carousel Section -->
<section class="d-block" class="d-inline-flex p-2" class="d-flex flex-column mb-3">
<div id="container">
  <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner animate__animated animate__zoomIn">
      {{#each carouselGames}}
      <div class="carousel-item{{#if @first}} active{{/if}}" data-bs-interval="1950">
        <div class="image-container">
          <img src="{{this}}" class="d-block w-100 carousel-image" alt="GAME-ON">
        </div>
      </div>
      {{/each}}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </a>
  </div>
</div>
</section>
<section class="d-block" class="d-inline-flex p-2" class="d-flex flex-column mb-3">
<div class="container-fluid mt-5">
  <div class="row row-col-2 d-flex justify-content-between m-2">
    <button type="button" id="btn" href="/gamesearch/1" class="mario text-black"><i class="fas fa-play"></i>PLAY
      NOW</button>
    <div class="col-md-6">
      <p class="text-white text-end">
        GAME ON! is your one-stop destination for a FREE online gaming experience. Our platform offers a wide array of
        games, catering to all types of gamers, from action enthusiasts to strategy masters. With a vast selection of
        games to choose from, you can explore new titles or revisit your all-time favorites.
      </p>
    </div>
  </div>
</div>
</section>
